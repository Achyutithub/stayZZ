<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">SignUp for Stayzz</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" placeholder="Enter title" class="form-control" required> 
                    <div class="valid-feedback">looks good</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" placeholder="Enter email" class="form-control" required> 
   
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" placeholder="Enter password" class="form-control" required> 
                    <div class="valid-feedback">looks good</div>
                </div>
                <button class="btn btn-green">SignUp</button>
            </form>
        </div>
    </div>
    